{
  "name": "remark-strip-badges",
  "version": "1.0.0",
  "description": "Remove badges (such as shields.io) from markdown",
  "license": "MIT",
  "keywords": [
    "remark",
    "markdown",
    "badge",
    "shields",
    "io",
    "remove",
    "clean",
    "strip"
  ],
  "dependencies": {
    "is-badge": "^1.0.0",
    "mdast-util-definitions": "^1.0.0",
    "unist-util-visit": "^1.0.0"
  },
  "repository": "wooorm/remark-strip-badges",
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "browserify": "^12.0.0",
    "eslint": "^1.0.0",
    "esmangle": "^1.0.0",
    "istanbul": "^0.4.0",
    "jscs": "^2.0.0",
    "jscs-jsdoc": "^1.0.0",
    "remark": "^3.0.0",
    "remark-comment-config": "^2.0.0",
    "remark-github": "^2.0.0",
    "remark-lint": "^2.0.0",
    "tape": "^4.0.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js --no-builtins -s remarkStripBadges > remark-strip-badges.js",
    "build-mangle": "esmangle remark-strip-badges.js > remark-strip-badges.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint-api": "eslint .",
    "lint-style": "jscs --reporter inline .",
    "lint": "npm run lint-api && npm run lint-style",
    "test-api": "node test.js",
    "test-coverage": "istanbul cover test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  }
}
