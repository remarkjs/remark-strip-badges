{
  "name": "remark-strip-badges",
  "version": "3.0.2",
  "description": "Remove badges (such as shields.io) from markdown",
  "license": "MIT",
  "keywords": [
    "remark",
    "markdown",
    "badge",
    "shields",
    "io",
    "remove",
    "clean",
    "strip"
  ],
  "repository": "https://github.com/wooorm/remark-strip-badges",
  "bugs": "https://github.com/wooorm/remark-strip-badges/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "is-badge": "^1.0.0",
    "mdast-util-definitions": "^1.0.0",
    "unist-util-visit": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "esmangle": "^1.0.0",
    "nyc": "^10.0.0",
    "remark": "^6.0.0",
    "remark-cli": "^2.0.0",
    "remark-preset-wooorm": "^1.0.0",
    "tape": "^4.0.0",
    "xo": "^0.17.1"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js --no-builtins -s remarkStripBadges > remark-strip-badges.js",
    "build-mangle": "esmangle remark-strip-badges.js > remark-strip-badges.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test.js",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "ignores": [
      "remark-strip-badges.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "presets": "wooorm"
  }
}
