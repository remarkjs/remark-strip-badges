{
  "name": "remark-strip-badges",
  "version": "3.0.4",
  "description": "Remove badges (such as shields.io) from markdown",
  "license": "MIT",
  "keywords": [
    "remark",
    "markdown",
    "badge",
    "shields",
    "io",
    "remove",
    "clean",
    "strip"
  ],
  "repository": "remarkjs/remark-strip-badges",
  "bugs": "https://github.com/remarkjs/remark-strip-badges/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "is-badge": "^1.0.0",
    "mdast-util-definitions": "^1.0.0",
    "unist-util-visit": "^1.3.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^12.0.0",
    "remark": "^9.0.0",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.4.3",
    "xo": "^0.22.0"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-bundle": "browserify . -s remarkStripBadges > remark-strip-badges.js",
    "build-mangle": "browserify . -s remarkStripBadges -p tinyify > remark-strip-badges.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test.js",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "esnext": false,
    "ignores": [
      "remark-strip-badges.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
